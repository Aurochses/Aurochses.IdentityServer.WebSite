@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer ViewLocalization

@model Aurochses.IdentityServer.WebSite.Models.TwoFactorSignIn.SendCodeViewModel

@{
    ViewData["Title"] = ViewLocalization["Page.Title"];
}

@section PageHeader
{
    @ViewLocalization["Page.Header"]
}

<form asp-controller="TwoFactorSignIn" asp-action="SendCode" asp-route-returnurl="@Model.ReturnUrl" method="post">
    <input asp-for="RememberMe" type="hidden" />

    <div class="form-group row">
        <label asp-for="SelectedProvider" class="col-md-3 col-form-label"></label>

        <div class="col-md-9">
            <select asp-for="SelectedProvider" asp-items="Model.Providers" class="form-control"></select>

            <div class="invalid-tooltip">
                <span asp-validation-for="SelectedProvider"></span>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6 offset-md-3">
            @ViewLocalization["Form.Information"]
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-9 offset-md-3">
            <button class="btn btn-primary" type="submit">
                @ViewLocalization["Form.Button.Submit"]
            </button>

            <a class="btn btn-light" href="@Url.Action("Index", "Home")" role="button">
                @ViewLocalization["Form.Button.Cancel"]
            </a>
        </div>
    </div>
</form>