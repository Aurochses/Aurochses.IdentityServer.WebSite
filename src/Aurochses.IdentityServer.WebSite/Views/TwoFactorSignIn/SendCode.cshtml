@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer ViewLocalization

@model Aurochses.IdentityServer.WebSite.Models.TwoFactorSignIn.SendCodeViewModel

@{
    ViewData["Title"] = ViewLocalization["Page.Title"];
}

@section PageHeader
{
    @ViewLocalization["Page.Header"]
}

<form asp-controller="TwoFactorSignIn" asp-action="SendCode" asp-route-returnurl="@Model.ReturnUrl" method="post" class="form-horizontal">
    <input asp-for="RememberMe" type="hidden" />

    <div class="form-group">
        <label asp-for="SelectedProvider" class="col-md-3 control-label"></label>
        <div class="col-md-9">
            <div class="row">
                <div class="col-md-6 col-sm-12">
                    <select asp-for="SelectedProvider" asp-items="Model.Providers"  class="form-control"></select>
                </div>
                <div class="help-block col-md-6 col-sm-12">
                    <span asp-validation-for="SelectedProvider" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-6 col-md-offset-3">
            @ViewLocalization["Form.Information"]
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-9 col-md-offset-3">
            <button class="btn btn-primary" type="submit">
                @ViewLocalization["Form.Button.Submit"]
            </button>
            <a class="btn btn-default" href="@Url.Action("Index", "Home")">
                @ViewLocalization["Form.Button.Cancel"]
            </a>
        </div>
    </div>
</form>