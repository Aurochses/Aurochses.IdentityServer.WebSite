@using Aurochses.Html
@using Aurochses.Identity.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer ViewLocalization

@inject SignInManager<ApplicationUser> SignInManager

@model Aurochses.IdentityServer.WebSite.Models.SignIn.SignInViewModel

@{
    ViewData["Title"] = ViewLocalization["Page.Title"];

    var projectNameContent = await Component.InvokeAsync("ProjectName");
    var projectName = projectNameContent.GetString();

    var modelState = ViewData.ModelState;

    var loginProviders = SignInManager.GetExternalAuthenticationSchemes().ToList();
}

@section PageHeader
{
    @ViewLocalization["Page.Header"]
}

<div class="row">
    
    <div class="col-md-6">
        <form asp-controller="SignIn" asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            <h4>@ViewLocalization["SignIn.Header", projectName]</h4>

            <hr/>
            
            @if (!modelState.IsValid)
            {
                if (modelState.ContainsKey("InvalidLoginAttempt"))
                {
                    <div class="alert alert-warning" role="alert">
                        <h5>
                            <strong>@ViewLocalization["InvalidLoginAttempt.Header"]</strong>
                        </h5>
                        
                        <ul>
                            <li>@ViewLocalization["InvalidLoginAttempt.Error.UserName"]</li>
                            <li>@ViewLocalization["InvalidLoginAttempt.Error.Language"]</li>
                            <li>@ViewLocalization["InvalidLoginAttempt.Error.CapsLock"]</li>
                        </ul>
                    </div>
                }
            }

            <div class="form-group">
                <label asp-for="Email" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="Email" class="form-control"/>

                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="col-md-3 control-label"></label>
                <div class="col-md-9">
                    <input asp-for="Password" class="form-control"/>

                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe"/>

                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-primary">@ViewLocalization["Form.Button.Submit"]</button>
                </div>
            </div>
            
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <div>
                        @ViewLocalization["RemindPassword.Information"]
                        <a asp-controller="RemindPassword" asp-action="Index">@ViewLocalization["RemindPassword.Link.Text"]</a>
                    </div>

                    <div>
                        @ViewLocalization["Registration.Information", projectName]
                        <a asp-controller="Registration" asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]">@ViewLocalization["Registration.Link.Text"]</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <h4>@ViewLocalization["SocialSignIn.Header"]</h4>

        <hr/>

        @if (loginProviders.Count == 0)
        {
            <div class="text-danger">
                There are no external authentication services configured. See <a href="http://go.microsoft.com/fwlink/?LinkID=532715">this article</a>
                for details on setting up this ASP.NET application to support logging in via external services.
            </div>
        }
        else
        {
            <form asp-controller="ExternalLogin" asp-action="Index" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
                <div>
                    <p>
                        @foreach (var provider in loginProviders)
                        {
                            <button type="submit" class="btn btn-default" name="provider" value="@provider.AuthenticationScheme" title="@ViewLocalization["SocialSignIn.Button.Title", provider.DisplayName]">@provider.DisplayName</button>
                        }
                    </p>
                </div>
            </form>
        }
    </div>

</div>