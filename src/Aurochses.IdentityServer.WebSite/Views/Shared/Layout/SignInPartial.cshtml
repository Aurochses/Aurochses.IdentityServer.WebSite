@using Aurochses.AspNetCore.Identity.EntityFrameworkCore
@using Microsoft.AspNetCore.Identity

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer ViewLocalization

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a asp-controller="User" asp-action="Index" class="nav-link">@UserManager.GetUserName(User)</a>
        </li>
        <li class="nav-item">
            <a asp-controller="SignOut" asp-action="Index" class="nav-link">@ViewLocalization["SignOut"]</a>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav ml-auto">
        <li class="nav-item">
            <a asp-controller="Registration" asp-action="Index" class="nav-link">@ViewLocalization["Registration"]</a>
        </li>
        <li class="nav-item">
            <a asp-controller="SignIn" asp-action="Index" class="nav-link">@ViewLocalization["SignIn"]</a>
        </li>
    </ul>
}