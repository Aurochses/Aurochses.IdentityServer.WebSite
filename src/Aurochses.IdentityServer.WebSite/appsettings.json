{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=IdentityServer;Trusted_Connection=True;"
  },
  "Logging": {
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "ExceptionHandler": {
    "Path": "/Error"
  },
  "StatusCodePages": {
    "Path": "/"
  },
  "Localization": {
    "Culture": "ru-RU",
    "UiCulture": "ru-RU"
  },
  "Project": {
    "Name": "Aurochses",
    "SupportEmail": "support@aurochses.com",
    "SupportUrl": "https://support.aurochses.com",
    "AccountUrl": ""
  },
  "ReCaptcha": {
    "SiteKey": "",
    "SecretKey": "",
    "ValidationMessage": "Подтвердите, что вы не робот."
  },
  "SendGrid": {
    "ApiKey": ""
  },
  "Twilio": {
    "AccountSid": "",
    "AuthToken": ""
  },
  "Identity": {
    "Password": {
      "RequireDigit": false,
      "RequireLowercase": false,
      "RequireNonAlphanumeric": false,
      "RequireUppercase": false,
      "RequiredLength": 6
    },
    "SendGridOptions": {
      "FromEmailAddress": "no-reply@aurochses.com",
      "FromEmailName": "Aurochses IdentityServer",
      "EmailConfirmationTokenTemplateId": "",
      "PasswordResetTokenTemplateId": "",
      "TwoFactorTokenTemplateId": ""
    },
    "TwilioOptions": {
      "FromPhoneNumber": "+15005550006",
      "TwoFactorTokenBodyFormat": "Aurochses. Ваш проверочный код: {0}"
    }
  },
  "Authentication": {
    "Cookies": {
      "CookieAuthentication": {
        "LoginPath": "/SignIn",
        "LogoutPath": "/SignOut",
        "AccessDeniedPath": "/Forbidden"
      }
    },
    "Facebook": {
      "AppId": "",
      "AppSecret": ""
    }
  },
  "IdentityServer": {
    "UserInteraction": {
      "LoginUrl": "/SignIn",
      "LogoutUrl": "/SignOut",
      "ConsentUrl": "/Consent",
      "ErrorUrl": "/Error"
    },
    "ConfigurationStore": {
      "DefaultSchema": "identityServer"
    },
    "OperationalStore": {
      "DefaultSchema": "identityServer",
      "EnableTokenCleanup": true,
      "TokenCleanupInterval": 30
    }
  },
  "SigningCertificate": {
    "Path": "IdentityServer.pfx",
    "Password": "IdentityServer"
  }
}