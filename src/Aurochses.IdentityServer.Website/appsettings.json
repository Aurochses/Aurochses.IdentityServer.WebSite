{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=IdentityServer;Trusted_Connection=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ExceptionHandler": {
    "Path": "/Error"
  },
  "StatusCodePages": {
    "Path": "/"
  },
  "Authentication": {
    "Cookies": {
      "CookieAuthentication": {
        "LoginPath": "/SignIn",
        "LogoutPath": "/SignOut",
        "AccessDeniedPath": "/Forbidden"
      }
    },
    "HasFacebook": false
  },
  "Identity": {
    "Password": {
      "RequireDigit": false,
      "RequireLowercase": false,
      "RequireNonAlphanumeric": false,
      "RequireUppercase": false,
      "RequiredLength": 6
    },
    "SendGridOptions": {
      "FromEmailAddress": "no-reply@aurochses.com",
      "FromEmailName": "Aurochses IdentityServer",
      "EmailConfirmationTokenTemplateId": "",
      "PasswordResetTokenTemplateId": "",
      "TwoFactorTokenTemplateId": ""
    },
    "TwilioOptions": {
      "FromPhoneNumber": "+15005550006",
      "TwoFactorTokenBodyFormat": "Aurochses IdentityServer. Code: {0}"
    }
  },
  "IdentityServer": {
    "UserInteraction": {
      "LoginUrl": "/SignIn",
      "LogoutUrl": "/SignOut",
      "ConsentUrl": "/Consent",
      "ErrorUrl": "/Error"
    },
    "ConfigurationStore": {
      "DefaultSchema": "identityServer"
    },
    "OperationalStore": {
      "DefaultSchema": "identityServer",
      "EnableTokenCleanup": true,
      "TokenCleanupInterval": 30
    },
    "SigningCredential": {
      "Certificate": {
        "Path": "IdentityServer.pfx",
        "Password": "IdentityServer"
      }
    }
  },
  "SendGrid": {
    "ApiKey": ""
  },
  "Twilio": {
    "AccountSid": "",
    "AuthToken": ""
  },
  "Facebook": {
    "AppId": "",
    "AppSecret": ""
  },
  "Account": {
    "AllowLocalLogin": true,
    "AllowRememberLogin": true,
    "WindowsAuthenticationSchemeName": "WindowsAuthenticationScheme"
  }
}
